<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ihy.ihearyou.fragment.CollaborationProcessFragment"
    android:layout_margin="10sp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Frequency Test(Left)"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/background_black"
        android:paddingTop="20sp"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click play button and check if you could hear the sound."
        android:textSize="@dimen/normal_font"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="#ffa5c028"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="40sp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_description"
        android:layout_marginTop="70sp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button_play"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sel_btn_play"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white_opaque"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="25"/>

    <Button
        android:id="@+id/button_no"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="@drawable/sel_btn_no"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white_opaque"
        android:layout_above="@+id/progress_bar"
        android:layout_alignLeft="@+id/progress_bar"
        android:layout_alignStart="@+id/progress_bar"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20sp"/>

    <Button
        android:id="@+id/button_yes"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="@drawable/sel_btn_ok"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white_opaque"
        android:layout_alignTop="@+id/button_no"
        android:layout_alignRight="@+id/progress_bar"
        android:layout_alignEnd="@+id/progress_bar"
        android:layout_marginRight="20sp"/>

</RelativeLayout>
