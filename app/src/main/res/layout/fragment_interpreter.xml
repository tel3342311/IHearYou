<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ihy.ihearyou.fragment.InterpreterFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/talk_base"/>
            <ImageView
                android:id="@+id/person_root"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/avatar_talk_5"/>

            <ImageView
                android:id="@+id/person_a"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/avatar_talk_3"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/person_root"
                android:layout_toEndOf="@+id/person_root"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/person_b"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/avatar_talk_2"
                android:layout_above="@+id/person_root"
                android:layout_toLeftOf="@+id/person_root"
                android:layout_toStartOf="@+id/person_root"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/person_c"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/avatar_talk_4"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/person_root"
                android:layout_toStartOf="@+id/person_root"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/person_d"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/avatar_talk_1"
                android:layout_below="@+id/person_root"
                android:layout_toRightOf="@+id/person_root"
                android:layout_toEndOf="@+id/person_root"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <ListView
                android:id="@+id/speech_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/record_btn"
                android:divider="@null"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll"/>

            <ImageView
                android:id="@+id/record_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sel_btn_record"/>
            <ImageView
                android:id="@+id/stop_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sel_btn_stop"
                android:visibility="invisible"/>
        </RelativeLayout>
</LinearLayout>
