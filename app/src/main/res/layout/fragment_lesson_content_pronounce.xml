<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/questionTitle"
            android:id="@+id/questionTitle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/questionDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#92ab2b"
            android:textSize="43sp"
            android:text="ㄅ\nㄢ"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="84dp"/>

        <TextView
            android:id="@+id/title_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/questionDetail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/play"
                android:background="@drawable/sel_btn_play"/>
            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/record"
                android:background="@drawable/sel_btn_record"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
