<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/ticket_Time_CB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ticket_location_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_Time_CB"
        android:paddingLeft="32sp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/ticket_TrainType_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_Time_CB"
        android:layout_alignParentRight="true"
        android:paddingRight="24sp"
        android:paddingTop="10sp"/>

    <CheckBox
        android:id="@+id/ticket_Notify_CB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_location_TextView"/>

</RelativeLayout>